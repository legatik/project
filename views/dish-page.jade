extends layout


block content

  != css('style-dish-page')
  != js('dish')

  include navigation
  include left-column
  include right-column

  #center-column
    #dish-container
      #dish-title
        h2 #{dish.title}
      #dish-body
        #dish-ing
          h4 Ингридиенты
          ul
            each duoble in dish.composition
              li #{duoble.ing}  - #{duoble.col}

        #dish-img-title
          img(src="/img/dishes/#{dish.id_picture}/title.jpg")

        #dish-img-cont
          - for (var i = 0; i < dish.qty_picture; i++){
              img(src="/img/dishes/#{dish.id_picture}/p"+i+".jpg")
          - }
        #dish-recept
          ol
            - for (var i = 0; i < dish.recipe.length; i++){
              - equalArr = dish.pic_equal.split(",")
              li #{dish.recipe[i]}
                - for (var j = 0; j < equalArr.length; j++){
                    -if(Number(equalArr[j]) == Number(i+1)){
                        img(src="/img/dishes/#{dish.id_picture}/p"+j+".jpg")
                    -}
                -}
            - }

      #block-footer
        h4 Коментарии к блюду
        #comment-block
        if(!user)
          h3 Только зарегестрированные пользователи могут оставить коментарии
        if(user)
          h3 Оставьте свой коментарий
          input#hide-input.hide(dataUser = user, dataDish = dish)
        #comment-send
          textarea#message
          button#send-message Отправить

  script#CommentTemplate(type="text/template")
    .user-info
      div firstName :
        span(style="color:red") <%=idUser[0].firstName%>
      div lastName :
        span(style="color:red") <%=idUser[0].lastName%>
    .message-user <%=message%>

