extends layout


block content
  include navigation
  include left-column
  include right-column
  != css('style-home')
  != js('home')


  #center-column
    h2 Мировая кухня
    div Мы приветствуем Вас на сайте который собрал все популятрные рецепты мира
    #carousel-example-generic.carousel.slide(data-ride='carousel')
      ol.carousel-indicators
        - for (var i = 0; i < popDish.length; i++){
            li(data-target='#carousel-example-generic', data-slide-to=i)
        - }
      .carousel-inner
        - for (var i = 0; i < popDish.length; i++){
              .item
                img(src='/img/dishes/#{popDish[i].id_picture}/title.jpg', alt='dish.title')
        - }
      a.left.carousel-control(href='#carousel-example-generic', data-slide='prev')
        span.glyphicon.glyphicon-chevron-left
      a.right.carousel-control(href='#carousel-example-generic', data-slide='next')
        span.glyphicon.glyphicon-chevron-right

    #dish-date-cont
      - for (var i = 0; i < dateDish.length; i++){
        .dish-date-item
          div #{dateDish[i].title}
          img.title-img(src!="/img/dishes/#{dateDish[i].id_picture}/title.jpg")
      - }

