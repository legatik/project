#headerbg
	#login-cont-button
		if user
			span#login-user-txt #{user.firstName}&nbsp#{user.lastName} &nbsp
			a(href="/logout") Logout
		else
			a#login-button.regist-log-button(href="#") Войти
			a#sing-up-button.regist-log-button(href="#") Зарегистрироваться

	#search-cont
		a#search-global-btn(href="#") Найти
		input#nav-dish-input.form-control(type='text', placeholder='Search')

	#headerblank
		#header
			div
				ul
					if (loc=='searchIng')
						li
							a.active-menu-item(href="/search/ing") Поиск по ингридиентам
					else
						li
							a(href="/search/ing") Поиск по ингридиентам

					if (loc=='randomDish')
						li
							a.active-menu-item(href="/random_dish") Случайный рецепт
					else
						li
							a(href="/random_dish") Случайный рецепт
					if (loc=='addDish')
						li
							a.active-menu-item(href="/addDish") Добавить рецепт
					else
						li
							a(href="/addDish") Добавить рецепт
					if (loc=='newsCookery')
						li
							a.active-menu-item(href="/news") Кулинарные новости
					else
						li
							a(href="/news") Кулинарные новости
			#login-reg-blok
				form#reg-send.form-reg-func(
					action="/register",
					method="POST",
					enctype="multipart/form-data",
					data-validate="parsley",
					data-trigger="change"
				)
						#close-reg.close-window
							b x
						#regheading
							h4 Регестрация
						.lable-reg(style="margin-top:-9px") Ваш ник:
						.input-reg-li(style="margin-top:-9px")
							label
								input.input-new-sty(
									type="text"
									placeholder="Nickname"
									name="nickname"
									value=user && user.nickname
									data-trigger="focusin focusout"
									data-required="true"
									data-type="alphanum"
								)
						br
						br
						br
						.lable-reg Ваш еmail:
						.input-reg-li
							label
								input.input-new-sty(
									type="text"
									placeholder="Email"
									name="email"
									value=user && user.email
									data-trigger="focusin focusout"
									data-required="true"
									data-type="email"
								)
						br
						br
						.lable-reg Ваш пароль:
						.input-reg-li
							label
								input#inputPassword.input-new-sty(
									type="password"
									placeholder="Password"
									name="password"
									data-trigger="focusin focusout"
									data-required="true"
								)
						br
						br
						.lable-reg Повторите пароль:
						.input-reg-li
							label
								input.input-new-sty(
									type="password"
									placeholder="Repeat password"
									data-trigger="focusin focusout"
									data-required="true"
									data-equalto="#inputPassword"
								)
						br
						br
						.lable-reg Ваше имя:
						.input-reg-li
							label
								input.input-new-sty(
									type="text"
									placeholder="First Name"
									name="firstName"
									value=user && user.firstName
									data-trigger="focusin focusout"
									data-required="true"
								)
						br
						br
						.lable-reg Ваша фамилия:
						.input-reg-li
							label
								input.input-new-sty(
									type="text"
									placeholder="Last Name"
									name="lastName"
									value=user && user.lastName
									data-trigger="focusin focusout"
									data-required="true"
								)
						#regbutton
							a(nohref) Регестрация


					
				form#login-send.form-reg-func(action="/login",method="POST",enctype="multipart/form-data", data-validate="parsley", data-trigger="change", style="display:none")
