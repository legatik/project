extends layout


block content
  script(data-main='/js/libs/config_requre/config', src='../js/libs/requre.js')
  != js('pm')
  != css('style-cooler')
  //!= css('style-search-new')
  include navigation
  include left-column
  include right-column
  #center-column
    #cooler-container
      img#holodilnik(src="/img/cooler/holodilnik.png")
      img.polki(src="/img/cooler/p-left-1.png")
      img.polki(src="/img/cooler/p-left-2.png")
      img.polki(src="/img/cooler/p-left-niz.png")
      img.polki(src="/img/cooler/p-right-1.png")
      img.polki(src="/img/cooler/p-right-2.png")
      img.polki(src="/img/cooler/p-right-3.png")
      img.polki(src="/img/cooler/p-right-4.png")
      img.polki(src="/img/cooler/p-right-top.png")
      //#sodergimoe
        img.cooler-companent#dobavki(src="/img/cooler/dobavki.png", ing="")
        img.cooler-companent#maso(src="/img/cooler/maso.png", ing="")
        img.cooler-companent#krupa_oreh(src="/img/cooler/krupa_oreh.png", ing="")
        img.cooler-companent#gribi(src="/img/cooler/gribi.png", ing="")
        img.cooler-companent#frukti(src="/img/cooler/frukti.png", ing="")
        img.cooler-companent#molochnie(src="/img/cooler/molochnie.png", ing="")
        img.cooler-companent#moreprodukti(src="/img/cooler/moreprodukti.png", ing="")
        img.cooler-companent#muchnie(src="/img/cooler/muchnie.png", ing="")
        img.cooler-companent#ovochi(src="/img/cooler/ovochi.png", ing="")

    #pm-ing-container
      h4 Ингридиенты
      
      #gribi-cont Грибы
        ol#gribi-ol
        
      #krupa_oreh-cont Крупы и каши
        ol#krupa_oreh-ol
        
      #molochnie-cont Молочные продукты
        ol#molochnie-ol
        
      #frukti-cont Фрукты и ягоды
        ol#frukti-ol
        
      #ovochi-cont Овощи и зелень
        ol#ovochi-ol
         
      #moreprodukti-cont Рыба и морепродукты
        ol#moreprodukti-ol
        
      #maso-cont Мясные продукты
        ol#maso-ol
        
      #muchnie-cont Мука и мучные изделия
        ol#muchnie-ol
         
      #dobavki-cont Добавки и витамины
        ol#dobavki-ol
         
    #pm-container
      input#pm-dish-ing(type="text", placeholder="введите ингридиент")
        

        
  //form#pm-container
    #pm-header
      input#pm-dish-input(type="text",name="test")
      lable Введите название блюда
      select#selectKitchen
        option Русская
        option Новая русская
      lable Тип кухни
      #pm-species
        input(type="checkbox", name="Закуски")
        lable Закуски
        input(type="checkbox", name="Салаты")
        lable Салаты
        input(type="checkbox", name="Супы")
        lable Супы
        input(type="checkbox", name="Вторые блюда")
        lable Вторые блюда
        input(type="checkbox", name="Выпечка")
        lable Выпечка
        input(type="checkbox", name="Десерты")
        lable Десерты
        input(type="checkbox", name="Напитки")
        lable Напитки
    #pm-body
      #pm-ing-input-cont
        input#pm-dish-ing(type="text")
        button#add-ing Добавить ингридиент
      #pm-more-options
        table
          tr
            td(width="265px",height="34px")
              input#time-cooke(type="number", min=0)
              span Веремя приготовления
            td(height="34px")
              span Популярность
              input#rating(type="number", min=0)
          tr
            td(height="34px")
              input#kremling_diet(type="number", min=0)
              span Кремлевская диета
              
            td(height="34px")
              span(style="width: 92px;display: inline-block;") Сложность
              input#complexity(type="number", min=0, max=10)
          tr
            td(height="34px")
              select#cost
                option 
                option Низкая
                option Средняя
                option Высокая
              span Цена

    button#start-search-btn Начать поиск
        

      
     
  
