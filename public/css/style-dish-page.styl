#dish-container
  #dish-title
    margin-top: 14px;
    text-align: center;
    color: #8c2b01;
    font-weight: bold;
    margin-bottom: 0px;
  #dish-body
    overflow:hidden
    #dish-ing
      display:inline-block;
      width: 300px;
      min-height: 320px;
      border-radius: 12px;
      border: 1px dashed #8C2B01;
      h4
        text-align: center;
        color: #8C2B01;
      ol
        li:first-letter
          text-transform: uppercase
    #dish-img-title
      float: right
      display:inline-block
      margin-left: 60px
      margin-bottom:20px
      img
        border-radius: 12px;
        width:330px;

    #title-begin-recept
      text-align: center;
      color: #8A2A01;
    h4
      color: #8A2A01;
    .hr
      width: 100%;
      height: 2px;
      border: 1px dashed #8c2b01;
      margin-top: 10px;
      margin-bottom: 20px;
      
      
  #block-footer
    .comment-item
      margin-bottom:10px
      height:100px
      border:1px solid black
      .user-info
        display:inline-block
        border-right:1px solid black
        width: 140px
        height:95px
        float: left
      .message-user
        display:inline-block
        width:500px
        height:100px
        margin-left:20px
        border-left:1px solid black
    #coment-title
      text-align: center;
      color: rgb(138, 42, 1);
    #info-noreg-cont
      padding: 0px;
      background: #efdb9e;
      border: 2px solid #e3c879;
      background-repeat: no-repeat;
      border-radius: 5px;
      color: #66250a;
      text-align: center;
      margin: 0 auto;
      margin-top: 12px;
      height: 84px;
      a
        color: #66250a;
        cursor:pointer
        text-decoration:none
