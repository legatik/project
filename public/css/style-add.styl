btn-background-active()
  background:#C0943B

btn-background()
    background rgb(209,176,97)
    background -moz-linear-gradient(top, rgb(209,176,97) 7%, rgb(209,176,97) 21%, rgb(209,176,97) 27%, rgb(192,148,59) 71%, rgb(192,148,59) 99%)
    background -webkit-gradient(linear, left top, left bottom, color-stop(7%,rgb(209,176,97)), color-stop(21%,rgb(209,176,97)), color-stop(27%,rgb(209,176,97)), color-stop(71%,rgb(192,148,59)), color-stop(99%,rgb(192,148,59)))
    background -webkit-linear-gradient(top, rgb(209,176,97) 7%,rgb(209,176,97) 21%,rgb(209,176,97) 27%,rgb(192,148,59) 71%,rgb(192,148,59) 99%)
    background -o-linear-gradient(top, rgb(209,176,97) 7%,rgb(209,176,97) 21%,rgb(209,176,97) 27%,rgb(192,148,59) 71%,rgb(192,148,59) 99%)
    background -ms-linear-gradient(top, rgb(209,176,97) 7%,rgb(209,176,97) 21%,rgb(209,176,97) 27%,rgb(192,148,59) 71%,rgb(192,148,59) 99%)
    background linear-gradient(to bottom, rgb(209,176,97) 7%,rgb(209,176,97) 21%,rgb(209,176,97) 27%,rgb(192,148,59) 71%,rgb(192,148,59) 99%)

#center-column
  #send-alert
    position: relative;
    top: 14px;
    left: 14px;
    color: #8c2b01;
    display:none

  #sendMail
    position: relative;
    top: 6px;
    cursor:pointer;
    border-radius: 28px;
    width: 160px;
    height: 34px;
    float: left;
    margin: 0px;
    padding: 7px 0 0 0;
    font-family: Arial;
    font-size: 14px;
    font-weight: bold;
    color: #fff;
    text-align: center;
    text-decoration: none;
    btn-background()
    background-repeat: repeat;
    &:hover
      btn-background-active()
      border-radius: 20px  
  h2
    text-align: center;
    color: #8c2b01;
  h4
    color: #8c2b01;
  #recept
    padding: 4px;
    background: rgba(239,208,115,0.5);
    width: 94%;
    max-width: 94%;
    margin-top: 0px;
    margin-left: 0px;
    border-radius: 9px;
    height: 150px
  #img-cont
    #im-cont-title
      margin-top: 10px;
      .small-cont
        margin-top: 5px;
  #im-cont-step
    margin-top:7px
    .small-cont
      margin-top: 5px;
  table
    margin: 0 auto;
    tbody
      tr
        td
          width:194px
          input
            border-radius: 14px;
            width: 188px;
            float: left;
            margin: 0px;
            padding: 2px 0 0 16px;
            font-family: Arial;
            font-size: 12px;
            color: #62562d;
            border: solid 1px #ead28b;
            height: 26px;
            margin-left: 2px;
            margin-top: 5px;
            width: 164px;
            outline: 0;
            -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,0.075),0 0 8px rgba(102,175,233,0.6);
            box-shadow: inset 0 1px 1px rgba(0,0,0,0.075),0 0 8px rgba(102,175,233,0.6);
#img-cont
  div
    .small-cont:hover
      img
        opacity:0.7
      .del
        opacity:1
    .small-cont
      position:relative
      width:160px
      height:160px
      display:inline-block
      margin-right:10px
      input
        position:absolute
        z-index: 1;
        width: 165px;
        height: 165px;
        opacity: 0;
      img
        position:absolute
        width:160px
        height:160px
      .del
        display:none
        opacity:0
        z-index:2

